<h1>Listing directories</h1>

<table>
  <tr>
    <th>User</th>
    <th>Year</th>
    <th>Major</th>
    <th>Phone</th>
    <th>Address</th>
    <th>Comment</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @directories.each do |directory| %>
  <tr>
    <td><%= directory.user_id %></td>
    <td><%= directory.year %></td>
    <td><%= directory.major %></td>
    <td><%= directory.phone %></td>
    <td><%= directory.address %></td>
    <td><%= directory.comment %></td>
    <td><%= link_to 'Show', directory %></td>
    <td><%= link_to 'Edit', edit_directory_path(directory) %></td>
    <td><%= link_to 'Destroy', directory, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

